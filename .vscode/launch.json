{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

    


            
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Windows Localhost",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceFolder}",
            // "firefoxExecutable": "C:\\Program Files\\Firefox Nightly\\firefox.exe"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox Mac",
            "url": "http://localhost:8000/",
            "file": "${workspaceFolder}/index.html"
        },
// The way to make this work is to run Launch index.html, navigate to the page, stop and run attach
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}\\index.html"
        },
        {
            "name": "Attach",
            "type": "firefox",
            "request": "attach",
            "url": "${workspaceFolder}\\index.html"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch WebExtension",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}"
        }
    ]
}